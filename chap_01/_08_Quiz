package chap_01;

public class _08_Quiz {
	public static void main(String[] args) {

		// 변수의 선언과 할당
		// 기본 데이터타입의 종류, 데이터타입
			
		// 버스 번호 (1234, 성남08)
		String busNo1 = "1234";
		String busNo2 = "성남08";
			
		// 남은 시간 (3분, 5분) - 정수형
		int time1 = 3;
		int time2 = 5;
		
		// 남은 거리 (1.2km, 0.8km) - 실수형
		double distance1 = 1.2;
		double distance2 = 0.8;
			
		// 결과 출력
		System.out.println(busNo2 + "번 버스");
		System.out.println("약 " + time1 + "분 후 도착");
		System.out.println("남은 거리 " + distance1 + "km");
			
		// 성남08번 버스
		// 약 3분 후 도착
		// 남은 거리 1.2km
	}
}
