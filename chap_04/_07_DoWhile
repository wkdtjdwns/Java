package chap_04;

public class _07_DoWhile {
	public static void main(String[] args) {
		// 반복문 do~while
		// 최소 1번은 무조건 실행시키는 반복문
		
		int distance = 25;
		int move = 25;
		while (move < distance) { // 먼저 조건식을 확인하고 실행함
			// 출력 없음
			System.out.println("스크로크를 합니다.");
			System.out.println("현재 이동 거리 : " + move);
			move += 3;
		}
		System.out.println("while 종료");
		
		do { // 최소 1번은 무조건 실행을 한 후에 조건식을 확인함
			// 출력 있음
			System.out.println("스크로크를 합니다.");
			System.out.println("현재 이동 거리 : " + move);
			move += 3;
		} while (move < distance);
		System.out.println("do~while 종료");
	}
}
